@model LuceneSpanishSearch.Models.DocumentoEditarModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar el documento con id @Model.Id</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div>
        @Html.ValidationSummary(true, "")
        @Html.HiddenFor(model => model.Id)

        <div>
            @Html.LabelFor(model => model.Titulo)
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div>
            @Html.LabelFor(model => model.Contenido)
            @Html.EditorFor(model => model.Contenido)
            @Html.ValidationMessageFor(model => model.Contenido)
        </div>

        <div>
            <button type="submit">Guardar</button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
