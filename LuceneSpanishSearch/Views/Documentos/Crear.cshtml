@model LuceneSpanishSearch.Models.DocumentoCrearModel

@{
    ViewBag.Title = "Crear";
}

<h2>Crear un nuevo documento</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div>
        @Html.ValidationSummary(true, "")
        <div >
            @Html.LabelFor(model => model.Titulo)
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div>
            @Html.LabelFor(model => model.Contenido)
            @Html.EditorFor(model => model.Contenido)
            @Html.ValidationMessageFor(model => model.Contenido)
        </div>

        <div>
            <button type="submit">Crear</button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
